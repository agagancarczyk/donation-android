<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    style="@style/appLayoutTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        style="@style/appLayoutTheme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingTop="0dip"
        android:stretchColumns="1"
        tools:ignore="UselessParent" >

        <TableRow>

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/user"
                android:contentDescription="@string/usericon" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingTop="0dip"
                android:stretchColumns="1" >

                <TableRow>

                    <TextView
                        android:id="@+id/row_userfirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:hint="@string/defaultFirstName"
                        android:textColor="@color/whiteColor"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/row_userlastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:hint="@string/defaultLastName"
                        android:textColor="@color/whiteColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/row_useremail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:hint="@string/defaultEmail"
                        android:textColor="@color/whiteColor"
                        android:textSize="14sp" />
                </TableRow>
            </TableLayout>

            <ImageView
                android:id="@+id/rightcheck"
                android:layout_width="40dip"
                android:layout_height="25dip"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/rightcheck"
                android:contentDescription="@string/rightcheck"
                android:scaleType="centerCrop" />
        </TableRow>
    </TableLayout>

</RelativeLayout>