<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/appLayoutTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="100dp"
        android:paddingTop="10dp"
        android:textSize="10pt" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:orientation="vertical" 
                android:background="@color/lightBlueColor">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingLeft="110dp"
                    android:text="@string/app_name"
                    android:textAppearance="?android:attr/textAppearanceLarge" 
                    android:textColor="@color/blueColor"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="60dp"
                    android:text="@string/welcome"
                    android:textAppearance="?android:attr/textAppearanceMedium" 
                    android:textColor="@color/blueColor"/>

                <Button
                    android:id="@+id/welcomeLogin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/verylightBlueColor"
                    android:onClick="loginPressed"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/welcomeLogin"
                    android:textColor="@color/whiteColor"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/welcomeSignup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/BlueColor"
                    android:onClick="signupPressed"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/welcomeSignup"
                    android:textColor="@color/whiteColor"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        style="@style/footer"
        android:layout_width="match_parent"
        android:background="@color/darkBlueColor" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dip"
            android:text="@string/appWebsite"
            android:textColor="@color/greycolor"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>